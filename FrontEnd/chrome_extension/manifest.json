{
  "name": "SocialSense Chrome Extension",
  "version": "1.0",
  "description": "A simple Chrome extension that displays Instagram posts and its corrections.",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["css/bootstrap.min.css", "css/mystyle.css"],
      "js": ["js/bootstrap.js"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; img-src *;",
    "sandbox": "sandbox allow-scripts; script-src 'self' https://code.jquery.com; object-src 'self'"
  }
}
